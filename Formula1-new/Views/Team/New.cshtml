
@{
    ViewBag.Title = "New";
}

<h2>Add Team</h2>
<form action="/Team/Create" method="POST">
    <div>
        <label>Team Name:</label> <input type="text" name="TeamName" />
    </div>
    <div>
        <label>Team Points:</label> <input type="number" name="TeamPoints" />
    </div>
    <div>
        <label>Engine Supplier:</label> <input type="text" name="EngineSupplier" />
    </div>
    <div>
        <label>Driver Id:</label> <input type="number" name="DriverId" />
    </div>
    <div>
        <input type="submit" value="Add Team" />
    </div>
</form>


