@model Formula1_new.Models.DriverDTO
@{
    ViewBag.Title = "Edit";
}


<style>
    body {
        background-image: url('https://github.com/jerryborgesjacob/HTTP5122/blob/main/f1-austria.png?raw=true');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<div class="delete-page">
    <h2>Edit a Driver</h2>
    <form action="/Driver/Update/@Model.DriverId" method="POST">
        <div style="display:none;">
            @* Pass through the Driver Id *@
            <input type="text" name="DriverId" value="@Model.DriverId" />
        </div>
        <div>
            <label>Driver Name:</label> <input type="text" name="DriverName" value="@Model.DriverName" />
        </div>
        <div>
            <label>Driver Points:</label> <input type="text" name="DriverPoints" value="@Model.DriverPoints" />
        </div>


        <div>
            <input type="submit" value="Update Driver" />

        </div>
    </form>
</div>