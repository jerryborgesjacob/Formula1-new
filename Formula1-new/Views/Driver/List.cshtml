@model IEnumerable<Formula1_new.Models.DriverDTO>
@{
    ViewBag.Title = "List";
}

<style>
    body {
        background-image: url('https://www.kymillman.com/wp-content/uploads/f1/gallery/images/edab0291a.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<div class="table-container">
    <h2>Driver List</h2>
    <table>
        <thead>
            <tr>
                <th>Driver Name</th>
                <th>Points</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var driver in Model.OrderByDescending(driver => driver.DriverPoints))
            {


                <tr>
                    <td>@driver.DriverName</td>
                    <td>@driver.DriverPoints</td>
                    <td><a href="/Driver/DeleteConfirm/@driver.DriverId">Delete </a> |  <a href="/Driver/Edit/@driver.DriverId">Edit</a></td>

                </tr>

            }
        </tbody>
    </table>
    <a class="add-button" href="/Driver/New" class="mt-4">Add Driver</a>
</div>